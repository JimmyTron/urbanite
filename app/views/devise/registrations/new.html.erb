<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-action teal lighten-1 white-text">
        <h3>Create Account</h3>
      </div>
      <div class="card-content">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="col s6">
            <%= f.input :first_name, placeholder: "Jane", required: true%>
            <%= f.error :first_name%>
          </div>
          <div class="col s6">
            <%= f.input :last_name, placeholder: "Doe" , required: true%>
            <%= f.error :last_name%>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <%= f.input :email, placeholder: "janedoe@example.com", required: true%>
            <%= f.error :email%>
          </div>
        </div>
        <div class="row">
          <div class="col s6">
            <%= f.input :password, placeholder: "********", required: true%>
            <%= f.error :password%>
          </div>
          <div class="col s6">
            <%= f.input :password_confirmation, placeholder: "*********", required: true%>
            <%= f.error :password_confirmation%>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <%=f.button :submit, "Sign Up", class: " waves-effect waves-dark btn-large "%>
          </div>
        </div>
        <%end%>

        <div class="row ">
          <div class="col s12 black-text">
            <p>Have an account?</p>
          </div>

          <div class="col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
</div>